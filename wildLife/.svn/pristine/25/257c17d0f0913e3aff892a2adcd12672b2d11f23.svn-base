<div class="modal-header">
	<button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
	<h4 ng-if="vm.export.isNew == true" class="modal-title"><i
			class="icon-plus"></i>{{'application.buttons.add' | translate}}</h4>
	<h4 ng-if="vm.export.isNew == false" class="modal-title"><i
			class="icon-pencil"></i>{{'application.buttons.edit' | translate}}</h4>
</div>
<div class="modal-body">

	<div class="portlet-body">
		<div class="row">
			<div class="col-md-6">
				<h3 ng-if="vm.export.isNew == true">{{"importAnimal.status" | translate}}:
					<strong>{{"importAnimal.create" | translate}}</strong></h3>
				<h3 ng-if="vm.export.isNew == false">{{"importAnimal.status" | translate}}:
					<strong>{{"importAnimal.update" | translate}}</strong></h3>
			</div>
			
		</div>

		<div class="row">
			<div class="col-md-6 margin-top-10">
				<label class="bold"><strong style="color:red">*</strong>{{"importAnimal.CSCN" | translate}}:</label>
				<div class="input-group">
					<input readonly data-ng-model="vm.export.farm.name" placeholder="{{'exportAnimal.searchFarm' | translate}}"
						type="text" class="form-control" title="vm.code" />
					<div class="input-group-btn">
						<button ng-click="vm.showPopupFarm()" class="btn btn-default" type="submit"><i
								class="glyphicon glyphicon-plus"></i>{{"exportAnimal.choose" | translate}}</button>
					</div>
				</div>
			</div>
			<div class="col-md-6 margin-top-10">
				<label class="bold"><strong
						style="color:red">*</strong>{{"exportAnimal.dateExport" | translate}}:</label>
				<input data-ng-model="vm.export.dateIssue" type="text" my-date-picker readonly
					class="form-control" />
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 ">
				<label class="bold"><strong style="color:red">*</strong>{{'exportAnimal.batchCode' | translate}}</label>
			   
				<div class="input-group">
					<input readonly	data-ng-model="vm.export.importLiveStockPorduct.batchCode" placeholder="{{'exportAnimal.searchBatchCode' | translate}}" type="text" class="form-control" title="vm.code"/>
					<div class="input-group-btn">
						<button ng-click="vm.showPopupBatchCode()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-plus"></i>{{"exportAnimal.choose" | translate}}</button>
					</div>
				</div>
			</div>
			
		</div>
		<div class="row">
			<div class="col-md-6 ">					
				<label class="bold">{{"import_export_live_stock_product.live_stock_product"|translate}}:</label>
				<input readonly	data-ng-model="vm.export.liveStockProductDto.name" type="text" class="form-control" />
				<label class="bold" ng-if="vm.showQuantity">{{"import_export_live_stock_product.remain_quantity"|translate}}:</label>
				<span readonly ng-if="vm.showQuantity" type="text" class="form-control">{{vm.export.importLiveStockPorduct.remainQuantity|number:2}}</span>
				<label class="bold" ng-if="vm.showAmount">{{"import_export_live_stock_product.remain_amount"|translate}}:</label>
				<span readonly	ng-if="vm.showAmount" type="text" class="form-control">{{vm.export.importLiveStockPorduct.remainAmount|number: 2}}</span>
				
			</div>
                    
		</div>
		
		<div class="row">
			<div class="col-md-6 " ng-if="vm.showQuantity">
				<label class="bold"><strong style="color:red">*</strong>{{'import_export_live_stock_product.quantity' | translate}}(<span ng-bind="vm.export.liveStockProductDto.unitQuantity.name"></span>)</label>
				<input  type="text" number-input ng-model="vm.export.quantity" name="quantity"  class="form-control"/>
				<!--<input data-ng-model="vm.exportAnimal.quantity" type="number" autofocus="autofocus" class="form-control" />-->
			</div>
			<div class="col-md-6 " ng-if="vm.showAmount">
				<label class="bold"><strong style="color:red">*</strong>{{'import_export_live_stock_product.amount' | translate}}(<span ng-bind="vm.export.liveStockProductDto.unitAmount.name"></span>)</label>
				<input  type="text" number-input ng-model="vm.export.amount" name="amount"  class="form-control"/>
				<!--<input data-ng-model="vm.exportAnimal.amount" type="number" autofocus="autofocus" class="form-control" />-->
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 ">
				<label class="bold">{{'exportEgg.buyerName' | translate}}</label>
				<input data-ng-model="vm.export.buyerName" type="text" autofocus="autofocus" class="form-control" />

			</div>
			
			<div class="col-md-6 ">
				<label class="bold">{{'exportEgg.buyerAdress' | translate}}</label>
				 <input data-ng-model="vm.export.buyerAdress" type="text" autofocus="autofocus" class="form-control" /> 
				
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 ">
				<label class="bold">{{'exportAnimal.description' | translate}}</label>
				<input data-ng-model="vm.export.description" type="text" autofocus="autofocus" class="form-control" />
			</div>
		</div>
	</div>

</div>
<div class="modal-footer">
	<button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal"><i class="icon-close"></i>
		{{'exportEgg.cancel' | translate}}</button>
	<button type="button" ng-click="vm.save(vm.importEgg)" class="btn btn-primary"
		data-dismiss="modal">{{'exportEgg.save' | translate}}</button>

</div>


<script type="text/ng-template" id="choose_farm_modal.html">
	<div modal-movable>
		<div class="modal-header">
			<button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
			<h4 class="modal-title bold font-yellow-gold"><i class="icon-question"></i> {{"exportAnimal.chooseFarm" | translate}}</h4>
		</div>
		<div class="modal-body">
			<div class="box-body box-profile">
				<div class="portlet-title">

					<div class="row margin-top-10 margin-bottom-10">
						<div class="col-md-6">
						</div>

						<div class="col-md-6">
							<div class="input-group">
								<input type="text"  ng-if="vm.isFamer == false"  data-ng-model="vm.farmCode" class="form-control" ng-keyup="vm.enterSearchFarm(e)" placeholder="{{'import_export_live_stock_product.chooseFarm' | translate}}" name="search">
								<input type="text"  ng-if="vm.isFamer == true" readonly data-ng-model="vm.farmCode" class="form-control" ng-keyup="vm.enterSearchFarm(e)" placeholder="{{'import_export_live_stock_product.chooseFarm' | translate}}" name="search">
								<div class="input-group-btn">
									<button ng-click="vm.searchByFarm()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="box-body">
					<table id="bsTableControlFarm" bs-table-control="vm.bsTableControlFarm"></table>

				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal">{{"exportAnimal.close" | translate}}</button>
			<button type="button" ng-click="vm.agreeFarm()" class="btn btn-primary" data-dismiss="modal">{{"exportAnimal.yes" | translate}}</button>
		</div>
	</div>
</script>

<script type="text/ng-template" id="choose_batch_code_modal.html">
	<div modal-movable>
		<div class="modal-header">
			<button type="button" class="close" ng-click="$dismiss()" aria-hidden="true"></button>
			<h4 class="modal-title bold font-yellow-gold"><i class="icon-question"></i>{{"exportAnimal.chooseBatchCode" | translate}}</h4>
		</div>
		<div class="modal-body">
			<div class="box-body box-profile">
				<div class="portlet-title">

					<div class="row margin-top-10 margin-bottom-10">
						<div class="col-md-6">
						</div>

						<div class="col-md-6">
							<div class="input-group">
								<input type="text" data-ng-model="vm.batchCode" class="form-control" ng-keyup="vm.enterSearchCode(e)" placeholder="{{'exportAnimal.searchNameCode' | translate}}" name="search">
								<div class="input-group-btn">
									<button ng-click="vm.searchByCode()" class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
								</div>
							</div>
						</div>
					</div>
					<!--<button class="btn btn-danger margin-left-10" data-ng-click="vm.deleteLabs()" data-ng-disabled="vm.selectedSpecialties.length <= 0"><i class="fa fa-trash"></i> Xóa bản ghi đã chọn</button>-->
					<!--</div>-->
				</div>
				<div class="box-body">
					<table id="bsTableControlCode" bs-table-control="vm.bsTableControlCode"></table>

				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal">{{"exportAnimal.close" | translate}}</button>
			<button type="button" ng-click="vm.agree()" class="btn btn-primary" data-dismiss="modal">{{"exportAnimal.yes" | translate}}</button>
		</div>
	</div>
</script>