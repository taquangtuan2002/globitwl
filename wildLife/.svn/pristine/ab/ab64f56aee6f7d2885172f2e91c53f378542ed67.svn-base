<div class="row margin-top-12">
	<div class="col-md-12">
		<div class="portlet light bordered">
			<div class="portlet-header">
				<h3><strong>{{'famer.importDrug' | translate}}</strong></h3>
			</div>
			<div class="portlet-title">
				<div class="row margin-top-10 margin-bottom-10">
					<div class="col-md-6">
						<button ng-if="vm.isSdahView==false"  type="button" ng-click="vm.createImportDrug(null)" class="btn btn-default"><i
								class="icon-plus"></i>{{"importAnimal.create" | translate}}</button>
					</div>
				</div>

				<div class="row margin-top-10 margin-bottom-10">
					<div class="col-md-4">
						<input ng-model="vm.fromDate" type="text"
							placeholder="{{'importAnimal.fromDate' | translate}}.............." class="form-control"
							my-date-picker />
					</div>
					<div class="col-md-4">
						<input ng-model="vm.toDate" type="text"
							placeholder="{{'importAnimal.toDate' | translate}}................" class="form-control"
							my-date-picker />
					</div>
					<div class="col-md-4">
						<div class="input-group">
							<input ng-if="!(vm.isWard || vm.isDistrict || vm.isSdah||vm.isRole)" readonly type="text"
								data-ng-model="vm.textSearch" ng-keyup="vm.enterSearch(e)" class="form-control"
								placeholder="{{'farm.searchNameCode' | translate}}" name="search">
							<input ng-if="vm.isWard || vm.isDistrict || vm.isSdah||vm.isRole" type="text"
								data-ng-model="vm.textSearch" ng-keyup="vm.enterSearch(e)" class="form-control"
								placeholder="{{'farm.searchNameCode' | translate}}" name="search">
							<div class="input-group-btn">
								<button ng-click="vm.searchByCode()" class="btn btn-default" type="submit"><i
										class="glyphicon glyphicon-search"></i></button>
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>
		<div ng-if="vm.isFamer">
			<table id="bsTableControl" bs-table-control="vm.bsTableControl"></table>
		</div>
		<div ng-if="!vm.isFamer">
			<table id="bsTableControlAdmin" bs-table-control="vm.bsTableControlAdmin"></table>
		</div>

	</div>
</div>
</div>

<script type="text/ng-template" id="detail.html">
	<div modal-movable>
		<div ng-include="'import_drug/views/detail.html'"></div>
	</div>
</script>

<script type="text/ng-template" id="confirm_delete.html">
	<div modal-movable>
		<div ng-include="'import_drug/views/confirm_delete.html'"></div>
	</div>
</script>
<script type="text/ng-template" id="confirm_delete_record.html">
	<div class="modal-header alert alert-danger">
						<h4 class="pull-left">{{'toastr.warning' | translate}}</h4>
			
			<a type="button" class="pull-right" ng-click="$dismiss()" aria-hidden="false"><i class="fa fa-fw fa-times-circle"></i></a>
	</div>
	<div class="modal-body">
		<div class="row">
				<p style="padding-left:15px;" class="text-danger"><i class="fa fa-fw fa-warning"></i>{{"importAnimal.confirmDelete" | translate}}  </p>
		</div>
	</div>
	<div class="modal-footer">
			<button type="button" ng-click="$dismiss()" class="btn btn-default" data-dismiss="modal"><i class="icon-close"></i>{{'animal.cancel' | translate}}</button>
			<button type="button" ng-click="vm.confirmDeleteRecord()" class="btn btn-danger"><i class="icon-check"></i>{{"exportAnimal.accept" | translate}}</button>
	</div>
</script>