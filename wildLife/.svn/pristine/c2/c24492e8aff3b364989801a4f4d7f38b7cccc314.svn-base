<div class="row margin-top-10">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="btn-group pull-left margin-top-10 margin-bottom-10">
                    <button class="btn btn-default" data-ng-click="vm.newGroup()"><i class="icon-plus"></i> Thêm mới</button>
                    <button class="btn btn-danger margin-left-10" type="button" data-ng-disabled="vm.selectedGroups.length <= 0" data-ng-click="vm.deleteGroups()"><i class="icon-trash"></i> Xóa</button>
                </div>
                <table id="bsTableControl" bs-table-control="vm.bsTableControl"></table>
            </div>
        </div>
    </div>
</div>
